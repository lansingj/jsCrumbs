.page-shop{
    background-color:#f0f0f0;
}
.banner {
    width: 100%;
    height: 280rpx;
    margin-bottom: 10rpx;
}

.banner .scroll-view-item {
    width: 100%;
    height: 320rpx;
    padding: 15rpx;
}
.choiceness .h2 {
    padding: 20rpx 0 5rpx 15rpx;
    font-size: 32rpx;
}

/* .choiceness {
    background-color: #fff;
} */
.sorts{
    text-align: center;
}
.sorts swiper{
    height:35px;
}
.sorts .name {
    padding: 10rpx 30rpx;
    margin: 0 30rpx;
    text-align: center;
    display: inline-block;
    font-weight: bold;
    font-size:32rpx;
}
.sorts .active {
    border-bottom: 2px solid #138535;
}


.shop {
    background-color:#fff;
    border-radius: 8rpx;
    margin:20rpx 20rpx;
    padding: 20rpx;
    box-shadow: 0 2px 5px #ccc;
}
.top-item {
    display: flex;
    margin-bottom:20rpx;
}
.top-item image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 16rpx;
    border:2px solid #fff;
}
.top-item .name{
    font-size:32rpx;
    margin-left:20rpx;
    margin-bottom:10rpx;
    margin-left:5rpx;
}
.top-item .sall{
    color: #999;
}
.top-item .sall .iconfont {
    color:#999;
    font-size:28rpx;
}
.bot-item{
    display: flex;
    text-align: center;
}
.bot-item .goods{
    flex: 1;
    text-align: center;
    margin-right: 20rpx;
}
.bot-item .goods:last-child{
    margin-right:0;
}
.bot-item .goods image{
    width:100%;
    height: 200rpx;
    margin-bottom:5rpx;
}
